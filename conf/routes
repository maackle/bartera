# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /login                      controllers.Auth.login
POST    /login                      controllers.Auth.authenticate
GET     /logout                     controllers.Auth.deauthenticate
GET     /signup                     controllers.Auth.signup
POST    /signup                     controllers.Auth.register

#GET     /image/:id/:size                      controllers.Application.viewImage(id:Long, size:Int, height:Int = -1)
GET     /image/:id/$width<[0-9]+>x$height<[0-9]+>   controllers.Application.viewImage(id:Long, width:Int, height:Int)

GET     /haves                      controllers.Haves.index
POST    /haves                      controllers.Haves.add
GET     /haves/:id                  controllers.Haves.detail(id:Long)

GET     /haves/:id/edit             controllers.Haves.edit(id:Long)
POST    /haves/:id/edit             controllers.Haves.update(id:Long)

POST    /haves/:id/image            controllers.Haves.addImage(id:Long)
DELETE  /haves/:id/image/:image_id  controllers.Haves.deleteImage(id:Long, image_id:Long)


GET     /my/profile                controllers.Profile.edit
POST    /my/profile                controllers.Profile.save

GET     /search/haves               controllers.Search.haves

### DEV routes ##############################################################################################

GET     /dev/schema/rebuild         controllers.dev.Schema.rebuild
GET     /dev/populate/:haves/:images               controllers.dev.Populator.populate(haves:Int, images:Int)

### static ##################################################################################################

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
